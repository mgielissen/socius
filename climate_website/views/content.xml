<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="content_one">
              <t t-call="website.layout">
                    <section class="s_text_image pt32 pb32" data-name="Image - Text">
                            <div class="container">
                              <div class="row align-items-center">
                                  <t t-foreach="data" t-as="order">
                                <div class="col-lg-6 pt16 pb16">
                                     <img t-attf-src="data:image/png;base64, #{order.data_file}" alt="Icon"
                                             class="oe_module_icon" style="width: 400px; height: 400px" />
                                </div>
                                <div class="col-lg-6 pt16 pb16">
                                  <h2 class="o_default_snippet_text"><span t-esc="order.name"/></h2>
                                  <p class="o_default_snippet_text"><span t-esc="order.comment"/></p>
                                </div>
                                  </t>
                              </div>
                            </div>
                    </section>
              </t>
        </template>
    </data>
</odoo>