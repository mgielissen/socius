<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="climate_homepage_template" inherit_id="website.homepage">
            <xpath expr="//div[@id='wrap']" position="inside">
                <div class="header-nav">
                    <div class="custom_header"
                         style="box-sizing: border-box; box-shadow: 0 1px 3px 0 #d4cfcf !important;">
                        <div class="row" style="margin-left: 0px; margin-right: 0px;padding: 1%;">
                            <div class="col-md-3" style="text-align:center;">
                                <a t-attf-href="/">
                                    <img t-attf-src="/climate_website/static/src/img/logo.png" alt="Logo"
                                         style="height: 76px;"/>
                                </a>
                            </div>

                            <form style="padding: 2.5%;margin-left: 16%;" name="myForm">
                                <input type="text" name="id" placeholder="Please enter the city"/>
                                <input type="submit" value="Search"/>
                            </form>

                            <div class="row"
                                 style="margin-left:72%;background-color:black;color:white;border-radius: 13px;width: 27%;text-align: center;margin-top: -6%;">
                                <t t-foreach="api" t-as="order">

                                    <div class="col-md-4" style="border-right: 2px solid white;padding-top: 3%;">
                                        Temperature
                                        <h5 style="text-align: center;color: red;">
                                            <i class="fa fa-thermometer-half"/>
                                            <br/>
                                            <span t-esc="order['temp']"/>
                                        </h5>
                                    </div>
                                    <div class="col-md-4" style="border-right: 2px solid white;padding-top: 3%;">
                                        Pressure
                                        <h5 style="text-align: center;color: red;">
                                            <i class="fa fa-tachometer"/>
                                            <br/>
                                            <span t-esc="order['pressure']"/>
                                        </h5>
                                    </div>
                                    <div class="col-md-4" style="padding-top: 3%;">Humidity
                                        <h5 style="text-align: center;color: red;">
                                            <i class="fa fa-tint"/>
                                            <br/>
                                            <span t-esc="order['humidity']"/>
                                        </h5>
                                    </div>

                                </t>
                            </div>
                        </div>
                    </div>
                </div>

                <div id="wrap" class="oe_structure oe_empty">

                    <section class="s_carousel_wrapper" data-name="Carousel">
                        <div id="myCarousel1580444200284" class="s_carousel s_carousel_default carousel slide"
                             data-interval="10000">
                            <ol class="carousel-indicators o_we_no_overlay">
                                <li data-target="#myCarousel1580444200284" data-slide-to="0" class="active"/>
                                <li data-target="#myCarousel1580444200284" data-slide-to="1"/>
                                <li data-target="#myCarousel1580444200284" data-slide-to="2"/>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item oe_img_bg pt152 pb152 active"
                                     style="background-image: url('/climate_website/static/src/img/cover.jpeg');height: 731.55px;"
                                     data-name="Slide">
                                    <div class="container">
                                        <div class="row content">
                                            <div class="col-lg-12 s_title" data-name="Title">
                                                <h1 class="s_title_thin o_default_snippet_text"
                                                    style="font-size: 51px;font-weight: 600;margin-top: -12%;margin-left: 37%;color:white;">
                                                    Clouds, Arctic Crocodiles<br></br>and a New Climate Model
                                                </h1>
                                                <a href="/page/details"
                                                   class="btn btn-primary flat o_default_snippet_text"
                                                   style="margin-left: 37%;color:white;">read story
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="carousel-item oe_img_bg pt96 pb96"
                                     style="background-image: url('/climate_website/static/src/img/bear.png');height: 592.55px;"
                                     data-name="Slide">
                                    <div class="col-lg-12 s_title" data-name="Title">
                                        <h1 class="s_title_thin o_default_snippet_text"
                                            style="font-size: 51px;font-weight: 600;margin-top: -4%;margin-left: 32%;color:black;">
                                            Polar bears and climate change: <br></br>What does the science say?
                                        </h1>
                                        <a href="/page/bear" class="btn btn-primary flat o_default_snippet_text"
                                           style="margin-left: 32%;color:white;">read story
                                        </a>
                                    </div>
                                </div>
                                <div class="carousel-item oe_img_bg pt96 pb96"
                                     style="background-image: url('/climate_website/static/src/img/1.jpeg');height: 763px;"
                                     data-name="Slide">
                                    <div class="col-lg-12 s_title" data-name="Title">
                                        <h1 class="s_title_thin o_default_snippet_text"
                                            style="font-size: 51px;font-weight: 600;margin-top: -4%;margin-left: 32%;color:black;">
                                            Breitsch-Klimameter
                                        </h1>
                                        <a href="/page/slides" class="btn btn-primary flat o_default_snippet_text"
                                           style="margin-left: 32%;color:white;">read story
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <a class="carousel-control-prev o_we_no_overlay" href="#myCarousel1580444200284"
                               data-slide="prev" role="img" aria-label="Previous" title="Previous">
                                <span class="carousel-control-prev-icon"/>
                                <span class="sr-only o_default_snippet_text">Previous</span>
                            </a>
                            <a class="carousel-control-next o_we_no_overlay" href="#myCarousel1580444200284"
                               data-slide="next" role="img" aria-label="Next" title="Next">
                                <span class="carousel-control-next-icon"/>
                                <span class="sr-only o_default_snippet_text">Next</span>
                            </a>
                        </div>
                    </section>

                    <section class="s_three_columns bg-200 pt32 pb32" id="facts">
                        <div class="container">

                            <b>
                                <h1 style="padding-top: 3%;">Facts</h1>
                            </b>
                            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <div class="row d-flex align-items-stretch">
                                            <div class="col-lg-4 s_col_no_bgcolor pt16 pb16">
                                                <div class="card bg-white">
                                                    <img class="card-img-top"
                                                         src="/climate_website/static/src/img/news1.jpg"
                                                         alt="Odoo - Sample 1 for three columns"/>
                                                    <div class="card-body">
                                                        <h3 class="card-title o_default_snippet_text">NASA's Operation
                                                            IceBridge Completes Eleven Years of Polar Surveys
                                                        </h3>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-4 s_col_no_bgcolor pt16 pb16">
                                                <div class="card bg-white">
                                                    <img class="card-img-top"
                                                         src="/climate_website/static/src/img/news2.jpg"
                                                         alt="Odoo - Sample 2 for three columns"/>
                                                    <div class="card-body">
                                                        <h3 class="card-title o_default_snippet_text">NASA, French Space
                                                            Laser Measures Massive Migration of Ocean Animals
                                                        </h3>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-4 s_col_no_bgcolor pt16 pb16">
                                                <div class="card bg-white">
                                                    <img class="card-img-top"
                                                         src="/climate_website/static/src/img/news3.jpg"
                                                         alt="Odoo - Sample 2 for three columns"/>
                                                    <div class="card-body">
                                                        <h3 class="card-title o_default_snippet_text">NASA Soil Data
                                                            Join the Air Force
                                                        </h3>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="carousel-item">
                                        <div class="row d-flex align-items-stretch">
                                            <div class="col-lg-4 s_col_no_bgcolor pt16 pb16">
                                                <div class="card bg-white">
                                                    <img class="card-img-top"
                                                         src="/climate_website/static/src/img/news3.jpg"
                                                         alt="Odoo - Sample 2 for three columns"/>
                                                    <div class="card-body">
                                                        <h3 class="card-title o_default_snippet_text">Landsat
                                                            Illustrates Five Decades of Change to Greenland Glaciers
                                                        </h3>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-4 s_col_no_bgcolor pt16 pb16">
                                                <div class="card bg-white">
                                                    <img class="card-img-top"
                                                         src="/climate_website/static/src/img/news5.jpg"
                                                         alt="Odoo - Sample 2 for three columns"/>
                                                    <div class="card-body">
                                                        <h3 class="card-title o_default_snippet_text">Flowing Antarctic
                                                            Ice Mapped 10 Times More Accurately
                                                        </h3>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                                   data-slide="prev">
                                    <span class="carousel-control-prev-icon"></span>
                                    <span class="sr-only">Previous</span>
                                </a>

                                <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                                   data-slide="next">
                                    <span class="carousel-control-next-icon"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                    </section>


                    <section
                            class="s_cover parallax s_parallax_is_fixed bg-black-50 pt96 pb961 s_parallax_no_overflow_hidden"
                            data-scroll-background-ratio="1" style="background-image: none;" id="articles">
                        <span class="s_parallax_bg oe_img_bg oe_custom_bg"
                              style="background-image: url('/climate_website/static/src/img/climate.jpg'); background-position: 50% 0;"/>
                        <div class="container">
                            <div class="row s_nb_column_fixed">
                                <div class="col-lg-12 s_title" data-name="Title">
                                    <h1 class="s_title_thin o_default_snippet_text"
                                        style="font-size: 62px; text-align: center;">What is Climate Change?
                                    </h1>
                                </div>
                            </div>
                        </div>
                        <div class="definitions_container">
                            <div class="dot">
                                <div class="a">Evidence
                                    <!--                                  <div class="hover_title">-->
                                    <!--                                    How do we know climate change is real?-->
                                    <!--                                  </div>-->
                                </div>
                            </div>
                            <div class="dot">
                                <div class="a">Causes</div>
                            </div>
                            <div class="dot">
                                <div class="a">Effects</div>
                            </div>
                            <div class="dot">
                                <div class="a">Solutions</div>
                            </div>
                        </div>
                    </section>


                    <section class="s_three_columns bg-200 pt32 pb32" id="solutions">
                        <div class="container">
                            <h1>Climate Change: How Do We Know?</h1>
                            <div class="row">

                                <t t-set="counter" t-value="0"/>
                                <t t-foreach="data" t-as="order">
                                    <t t-set="counter" t-value="counter + 1"/>
                                    <t t-if="counter &lt;= 3">
                                        <div class="col">
                                            <div class="card bg-white">
                                                <img t-attf-src="data:image/png;base64, #{order.data_file}" alt="Icon"
                                                     class="oe_module_icon" style="width: 270px;height: 325px;"/>
                                                <div class="card-body">
                                                    <h6>
                                                        <span t-esc="order.date_from"/>
                                                    </h6>
                                                    <h3 class="card-title o_default_snippet_text">
                                                        <span t-esc="order.name"/>
                                                    </h3>
                                                    <form action="/page/content" method="post">
                                                        <input type="hidden" name="id" t-att-value="order.id"/>
                                                        <input type="submit" value="Read More"/>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </t>

                                <div class="col">
                                    <b>
                                        <h3>More Interesting Topics</h3>
                                    </b>
                                    <t t-set="counter" t-value="0"/>
                                    <t t-foreach="data" t-as="order">
                                        <t t-set="counter" t-value="counter + 1"/>
                                        <t t-if="counter >3">
                                            <form action="/page/content" method="post">
                                                <input type="hidden" name="id" t-att-value="order.id"/>
                                                <h3 class="card-title o_default_snippet_text">
                                                    <span t-esc="order.name"/>
                                                </h3>
                                                <input type="submit" value="Read More"/>
                                            </form>
                                        </t>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </xpath>
        </template>
    </data>
</odoo>

