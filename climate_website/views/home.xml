                     <section class="s_three_columns bg-200 pt32 pb32">
                        <div class="container">
                            <h1>Climate Change: How Do We Know?</h1>
                            <div class="row">
                                <t t-set="counter" t-value="0"/>
                                <t t-foreach="data" t-as="order">
                                    <t t-set="counter" t-value="counter + 1"/>
                                    <t t-if="counter &lt;= 3">
                                          <div class="col">
                                              <div class="card bg-white">
                                                      <img t-attf-src="data:image/png;base64, #{order.data_file}" alt="Icon"
                                                         class="oe_module_icon" style="width: 253px; height: 225px" />
                                                <div class="card-body">
                                                  <h3 class="card-title o_default_snippet_text"><span t-esc="order.name"/></h3>
                                                    <form action="/page/content1" method="post">
                                                        <input type="hidden" name="id" t-att-value="order.id"/>
            <!--                                        <div class="s_btn text-left pb0 pt16" data-name="Button">-->
                                                    <input type="submit" value="Read More"/>
            <!--                                        <a href="/page/content1" class="btn btn-primary btn-sm o_default_snippet_text">Read more</a>-->
            <!--                                        </div>-->
                                                    </form>
                                                </div>
                                              </div>
                                          </div>
                                    </t>
                                </t>

                              <div class="col">
                                  <b><h3>More Interesting Topics</h3></b>
                                  <t t-set="counter" t-value="0"/>
                                    <t t-foreach="data" t-as="order">
                                        <t t-set="counter" t-value="counter + 1"/>
                                        <t t-if="counter >3">
                                               <form action="/page/content1" method="post">
                                                        <input type="hidden" name="id" t-att-value="order.id"/>
                                                       <h3 class="card-title o_default_snippet_text"><span t-esc="order.name"/></h3>
                                                       <input type="submit" value="Read More"/>
            <!--                                        </div>-->
                                               </form>
<!--                                              <h5 class="card-title o_default_snippet_text"><span t-esc="order.name"/></h5>-->
<!--                                              <h5>What Is the Sun's Role in Climate Change?</h5>-->
                                        </t>
                                    </t>
                              </div>
                            </div>
                        </div>
