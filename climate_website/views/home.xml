<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="climate_homepage_template" inherit_id="website.homepage">
          <xpath expr="//div[@id='wrap']" position="inside">
            <div id="wrap" class="oe_structure oe_empty">

                    <section class="s_cover parallax s_parallax_is_fixed bg-black-50 s_parallax_no_overflow_hidden pt256 pb256" data-scroll-background-ratio="0" style="background-image: none;padding-bottom: 500px ! important;">
                      <span class="s_parallax_bg oe_img_bg oe_custom_bg" style="background-image: url('climate_website/static/src/img/cover.jpeg'); background-position: 50% 0;"/>
                      <div class="container">
                        <div class="row s_nb_column_fixed">
                          <div class="col-lg-12 s_title" data-name="Title">
                            <h1 class="s_title_thin o_default_snippet_text" style="font-size: 62px; font-weight: 900;margin-top: -17%;margin-left: 36%;">Clouds, Arctic Crocodiles<br> </br>and a New Climate Model</h1>
                          </div>
                        <button type="button" class="btn btn-primary">read story</button>
                        </div>
                      </div>
                    </section>

                     <section class="s_three_columns bg-200 pt32 pb32">
                        <div class="container">

                            <b><h1>News &amp; Trending
                            </h1></b>
                            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                                  <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <div class="row d-flex align-items-stretch">
                                            <div class="col-lg-4 s_col_no_bgcolor pt16 pb16">
                                                 <div class="card bg-white">
                                                    <img class="card-img-top" src="climate_website/static/src/img/news1.jpg" alt="Odoo - Sample 1 for three columns"/>
                                                    <div class="card-body">
                                                      <h3 class="card-title o_default_snippet_text">NASA's Operation IceBridge Completes Eleven Years of Polar Surveys</h3>
                                                    </div>
                                                  </div>
                                            </div>
                                            <div class="col-lg-4 s_col_no_bgcolor pt16 pb16">
                                              <div class="card bg-white">
                                                <img class="card-img-top" src="climate_website/static/src/img/news2.jpg" alt="Odoo - Sample 2 for three columns"/>
                                                <div class="card-body">
                                                  <h3 class="card-title o_default_snippet_text">NASA, French Space Laser Measures Massive Migration of Ocean Animals</h3>
                                                </div>
                                              </div>
                                            </div>
                                            <div class="col-lg-4 s_col_no_bgcolor pt16 pb16">
                                              <div class="card bg-white">
                                                <img class="card-img-top" src="climate_website/static/src/img/news3.jpg" alt="Odoo - Sample 2 for three columns"/>
                                                <div class="card-body">
                                                  <h3 class="card-title o_default_snippet_text">NASA Soil Data Join the Air Force</h3>
                                                </div>
                                              </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="carousel-item" >
                                        <div class="row d-flex align-items-stretch">
                                          <div class="col-lg-4 s_col_no_bgcolor pt16 pb16">
                                                  <div class="card bg-white">
                                                    <img class="card-img-top" src="climate_website/static/src/img/news3.jpg" alt="Odoo - Sample 2 for three columns" />
                                                    <div class="card-body">
                                                      <h3 class="card-title o_default_snippet_text">Landsat Illustrates Five Decades of Change to Greenland Glaciers </h3>
                                                    </div>
                                                  </div>
                                          </div>
                                          <div class="col-lg-4 s_col_no_bgcolor pt16 pb16">
                                                  <div class="card bg-white">
                                                    <img class="card-img-top" src="climate_website/static/src/img/news5.jpg" alt="Odoo - Sample 2 for three columns"/>
                                                    <div class="card-body">
                                                      <h3 class="card-title o_default_snippet_text">Flowing Antarctic Ice Mapped 10 Times More Accurately</h3>
                                                    </div>
                                                  </div>
                                          </div>
                                        </div>
                                    </div>

                                  </div>
                                  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev" >
                                    <span class="carousel-control-prev-icon" ></span>
                                    <span class="sr-only">Previous</span>
                                  </a>

                                  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next" >
                                    <span class="carousel-control-next-icon" ></span>
                                    <span class="sr-only">Next</span>
                                  </a>
                            </div>
                        </div>
                     </section>


                    <section class="s_cover parallax s_parallax_is_fixed bg-black-50 pt96 pb961 s_parallax_no_overflow_hidden" data-scroll-background-ratio="1" style="background-image: none;">
                        <span class="s_parallax_bg oe_img_bg oe_custom_bg" style="background-image: url('climate_website/static/src/img/climate.jpg'); background-position: 50% 0;"/>
                        <div class="container">
                          <div class="row s_nb_column_fixed">
                            <div class="col-lg-12 s_title" data-name="Title">
                              <h1 class="s_title_thin o_default_snippet_text" style="font-size: 62px; text-align: center;">What is Climate Change?</h1>
                            </div>
                          </div>
                        </div>
                        <div class="definitions_container">
                              <div class="dot">
                                  <div class="a">Evidence
<!--                                  <div class="hover_title">-->
<!--                                    How do we know climate change is real?-->
<!--                                  </div>-->
                                  </div>
                              </div>
                               <div class="dot">
                                  <div class="a">Causes</div>
                              </div>
                               <div class="dot">
                                  <div class="a">Effects</div>
                              </div>
                               <div class="dot">
                                  <div class="a">Solutions</div>
                              </div>
                        </div>
                    </section>


                     <section class="s_three_columns bg-200 pt32 pb32">
                        <div class="container">
                            <h1>Climate Change: How Do We Know?</h1>
                            <div class="row">

                                <t t-set="counter" t-value="0"/>
                                <t t-foreach="data" t-as="order">
                                    <t t-set="counter" t-value="counter + 1"/>
                                    <t t-if="counter &lt;= 3">
                                          <div class="col">
                                              <div class="card bg-white">
                                                      <img t-attf-src="data:image/png;base64, #{order.data_file}" alt="Icon"
                                                         class="oe_module_icon" style="width: 270px;height: 325px;" />
                                                <div class="card-body">
                                                    <h6><span t-esc="order.date_from"/></h6>
                                                  <h3 class="card-title o_default_snippet_text"><span t-esc="order.name"/></h3>
                                                    <form action="/page/content" method="post">
                                                        <input type="hidden" name="id" t-att-value="order.id"/>
                                                    <input type="submit" value="Read More"/>
                                                    </form>
                                                </div>
                                              </div>
                                          </div>
                                    </t>
                                </t>

                              <div class="col">
                                  <b><h3>More Interesting Topics</h3></b>
                                  <t t-set="counter" t-value="0"/>
                                    <t t-foreach="data" t-as="order">
                                        <t t-set="counter" t-value="counter + 1"/>
                                        <t t-if="counter >3">
                                               <form action="/page/content" method="post">
                                                        <input type="hidden" name="id" t-att-value="order.id"/>
                                                       <h3 class="card-title o_default_snippet_text"><span t-esc="order.name"/></h3>
                                                       <input type="submit" value="Read More"/>
                                               </form>
                                        </t>
                                    </t>
                              </div>
                            </div>
                        </div>
                     </section>
            </div>
          </xpath>
        </template>
    </data>
</odoo>

