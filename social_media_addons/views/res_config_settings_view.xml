<odoo>
    <data>

        <record id="res_config_settings_inherit_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.social.media.addons</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="website.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]//div//div//div//div//div//div[6]" position="after">
                    <div class="row">
                        <label for="skype_id" string="Skype ID" class="col-md-3 o_light_label"/>
                        <field name="skype_id"/>
                        <label for="whatsapp_number" string="WhatsApp" class="col-md-3 o_light_label"/>
                        <field name="whatsapp_number"/>
                        <div class="text-muted col-md-12">
                            full phone number in international format. Omit any zeroes, brackets, or dashes when adding the phone number in international format.
                        </div>
                        <label for="social_whatsapp" string="WhatsApp" class="col-md-3 o_light_label" invisible="1"/>
                        <field name="social_whatsapp" invisible="1"/>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>