<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="tree_custom_model" model="ir.ui.view">
        <field name="name">custom.model.tree</field>
        <field name="model">backend.model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="custom_form_view" model="ir.ui.view">
        <field name="name">custom.model.form</field>
        <field name="model">backend.model</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                    <field name="name" string="Content Heading"/>
                    <field placeholder="Write Content here" type="text" name="comment" string="Content" id="content_text"  rows="10" cols="30" maxlength = "40"/>
                        <field name="date_from"/>
                    <field name="data_file"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>
    <record id="custom_action" model="ir.actions.act_window">
            <field name="name">Content upload</field>
            <field name="res_model">backend.model</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                 <form>
                <field name="name" string="Content Heading"/>
            </form>
            </field>
        </record>

    <!--create child menu/Action menu-->

        <menuitem name="News Upload" id="custom_top_menu" action="custom_action" />
</odoo>


















































































